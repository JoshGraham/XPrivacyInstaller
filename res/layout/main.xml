<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:text="@string/title_description" />

        <Button
            android:id="@+id/btnWhatIs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_whatis" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="12dip"
            android:text="@string/title_steps"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" />

        <!-- Requirements -->

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dip"
            android:text="@string/title_requirements"
            android:textStyle="bold" />

        <!-- Requirements a -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_a" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <CheckBox
                    android:id="@+id/cbAndroid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/title_android" />

                <TextView
                    android:id="@+id/tvAndroid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_noandroid"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <!-- Requirements b -->

        <LinearLayout
            android:id="@+id/llRoot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_b" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <Button
                        android:id="@+id/btnCheckRoot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_checkroot" />

                    <CheckBox
                        android:id="@+id/cbRoot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:text="@string/title_root"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/btnRoot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_noroot"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>

            <!-- Requirements c -->

            <LinearLayout
                android:id="@+id/llBackup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_c" />

                    <CheckBox
                        android:id="@+id/cbBackup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/title_backup"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Requirements d -->

                <LinearLayout
                    android:id="@+id/llSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title_d" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" >

                            <CheckBox
                                android:id="@+id/cbSettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_settings" />

                            <Button
                                android:id="@+id/btnSettings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_gosettings"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <!-- Xposed -->

                    <LinearLayout
                        android:id="@+id/llXposedInstalled"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginBottom="6dip"
                            android:layout_marginTop="6dip"
                            android:background="@android:color/darker_gray" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dip"
                            android:text="@string/title_xposed"
                            android:textStyle="bold" />
                        <!-- Xposed a -->

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/title_a" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical" >

                                <CheckBox
                                    android:id="@+id/cbXposedInstalled"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:enabled="false"
                                    android:text="@string/title_xinstalled" />

                                <Button
                                    android:id="@+id/btnXposedInstalled"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_noxinstalled"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>
                        <!-- Xposed b -->

                        <LinearLayout
                            android:id="@+id/llXPosedEnabled"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone" >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/title_b" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical" >

                                    <CheckBox
                                        android:id="@+id/cbXposedEnabled"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_xenabled" />

                                    <Button
                                        android:id="@+id/btnXposedEnabled"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_noxenabled"
                                        android:visibility="gone" />
                                </LinearLayout>
                            </LinearLayout>

                            <!-- XPrivacy -->

                            <LinearLayout
                                android:id="@+id/llXPrivacy"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:visibility="gone" >

                                <View
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="6dip"
                                    android:layout_marginTop="6dip"
                                    android:background="@android:color/darker_gray" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="6dip"
                                    android:text="@string/title_xprivacy"
                                    android:textStyle="bold" />

                                <!-- XPrivacy a -->

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal" >

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/title_a" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical" >

                                        <CheckBox
                                            android:id="@+id/cbXPrivacy"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:enabled="false"
                                            android:text="@string/title_xpinstalled" />

                                        <Button
                                            android:id="@+id/btnXPrivacy"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/title_noxprivacy"
                                            android:visibility="gone" />
                                    </LinearLayout>
                                </LinearLayout>

                                <!-- XPrivacy b -->

                                <LinearLayout
                                    android:id="@+id/llEnabled"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:visibility="gone" >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="horizontal" >

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/title_b" />

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical" >

                                            <CheckBox
                                                android:id="@+id/cbEnabled"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/title_enabled" />

                                            <Button
                                                android:id="@+id/btnEnabled"
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:text="@string/title_goenable"
                                                android:visibility="gone" />
                                        </LinearLayout>
                                    </LinearLayout>

                                    <!-- Activate -->

                                    <LinearLayout
                                        android:id="@+id/llActivate"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical"
                                        android:visibility="gone" >

                                        <View
                                            android:layout_width="fill_parent"
                                            android:layout_height="1dp"
                                            android:layout_marginBottom="6dip"
                                            android:layout_marginTop="6dip"
                                            android:background="@android:color/darker_gray" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginBottom="6dip"
                                            android:text="@string/title_activate"
                                            android:textStyle="bold" />

                                        <Button
                                            android:id="@+id/btnStartOnce"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/title_startonce" />

                                        <Button
                                            android:id="@+id/btnReboot"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="@string/title_reboot" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="6dip"
            android:layout_marginTop="6dip"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btnHelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_help" />

        <Button
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_rate" />
    </LinearLayout>

</ScrollView>